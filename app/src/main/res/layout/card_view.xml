<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:androidx.cardview="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    androidx.cardview:layout_height="wrap_content"
    androidx.cardview:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    androidx.cardview:id="@+id/condition_cardview"
    androidx.cardview:clickable="true"
    androidx.cardview:foreground="?android:attr/selectableItemBackground"
    androidx.cardview:layout_marginBottom="2dp"
    androidx.cardview:layout_marginTop="2dp"
    androidx.cardview:layout_marginLeft="4dp"
    androidx.cardview:layout_marginRight="4dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@color/colorCardViewBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        androidx.cardview:id="@+id/linearLayout"
        androidx.cardview:layout_width="match_parent"
        androidx.cardview:layout_height="wrap_content"
        androidx.cardview:orientation="horizontal">


        <TextView
            androidx.cardview:textSize="14sp"
            androidx.cardview:id="@+id/card_view_member"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="8dp"
            androidx.cardview:layout_marginLeft="8dp"
            androidx.cardview:text="TextView"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_description_member"
            app:layout_constraintStart_toEndOf="@+id/card_view_description_member"
            app:layout_constraintTop_toTopOf="@+id/card_view_description_member" />

        <TextView
            androidx.cardview:textSize="14sp"
            androidx.cardview:id="@+id/card_view_discription"
            androidx.cardview:layout_width="0dp"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="8dp"
            androidx.cardview:layout_marginLeft="8dp"
            androidx.cardview:layout_marginEnd="16dp"
            androidx.cardview:layout_marginRight="16dp"
            androidx.cardview:text="TextView"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view_description"
            app:layout_constraintTop_toTopOf="@+id/card_view_description"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="137dp" />

        <TextView
            androidx.cardview:id="@+id/cardview_condition_type"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="8dp"
            androidx.cardview:layout_marginLeft="8dp"
            androidx.cardview:text="TextView"
            androidx.cardview:textColor="@color/colorPureWhite"
            androidx.cardview:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardview_condition_string"
            app:layout_constraintStart_toEndOf="@+id/cardview_condition_string"
            app:layout_constraintTop_toTopOf="@+id/cardview_condition_string" />

        <TextView
            androidx.cardview:textSize="14sp"
            androidx.cardview:id="@+id/card_view_money_amount"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="8dp"
            androidx.cardview:layout_marginLeft="8dp"
            androidx.cardview:text="TextView"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_description_amount"
            app:layout_constraintStart_toEndOf="@+id/card_view_description_amount" />

        <TextView
            androidx.cardview:id="@+id/card_view_description_amount"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="12dp"
            androidx.cardview:layout_marginLeft="12dp"
            androidx.cardview:layout_marginEnd="8dp"
            androidx.cardview:layout_marginRight="8dp"
            androidx.cardview:text="@string/cardview_description_amount"
            androidx.cardview:textSize="14sp"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_member"
            app:layout_constraintEnd_toStartOf="@+id/card_view_money_amount"
            app:layout_constraintStart_toEndOf="@+id/card_view_member"
            app:layout_constraintTop_toTopOf="@+id/card_view_member" />

        <TextView
            androidx.cardview:textSize="14sp"
            androidx.cardview:id="@+id/card_view_description_member"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="16dp"
            androidx.cardview:layout_marginLeft="16dp"
            androidx.cardview:layout_marginTop="4dp"
            androidx.cardview:text="@string/cardview_description_member"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            androidx.cardview:textSize="14sp"
            androidx.cardview:id="@+id/cardview_condition_string"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="8dp"
            androidx.cardview:layout_marginLeft="8dp"
            androidx.cardview:text="TextView"
            androidx.cardview:textColor="@color/colorPureWhite"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/textView12" />

        <TextView
            androidx.cardview:id="@+id/textView12"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="16dp"
            androidx.cardview:layout_marginLeft="16dp"
            androidx.cardview:layout_marginTop="4dp"
            androidx.cardview:layout_marginBottom="4dp"
            androidx.cardview:text="@string/cardview_description_datetime"
            androidx.cardview:textColor="@color/colorPureWhite"
            androidx.cardview:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_description" />

        <TextView
            androidx.cardview:id="@+id/card_view_description"
            androidx.cardview:layout_width="wrap_content"
            androidx.cardview:layout_height="wrap_content"
            androidx.cardview:layout_marginStart="16dp"
            androidx.cardview:layout_marginLeft="16dp"
            androidx.cardview:layout_marginTop="4dp"
            androidx.cardview:text="@string/cardview_description_description"
            androidx.cardview:textColor="@color/colorPureWhite"
            androidx.cardview:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_member" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>