        android:id="@+id/resetPattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改文本密码" />

    <Button
        android:id="@+id/resetPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改指纹密码" />



</LinearLayout>